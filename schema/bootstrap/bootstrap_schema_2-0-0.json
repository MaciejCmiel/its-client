{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://Orange-OpenSource.github.io/its-client/schema/bootstrap",
  "$references": [],
  "description": "Bootstrap JSON schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "message_type",
    "version",
    "iot3_id",
    "psk_iot3_id",
    "psk_iot3_secret",
    "services"
  ],
  "properties": {
    "message_type": {
      "type": "string",
      "description": "message type",
      "const": "bootstrap"
    },
    "version": {
      "type": "string",
      "description": "json message format version",
      "const": "2.0.0-dev"
    },
    "iot3_id": {
      "type": "string",
      "description": "IoT3 ID, to serve as the prefix to MQTT client-ID"
    },
    "psk_iot3_id": {
      "type": "string",
      "description": "The PSK IoT3 ID (aka login) to use to authenticate against the IoT3 services"
    },
    "psk_iot3_secret": {
      "type": "string",
      "description": "The PSK IoT3 secret (aka password) to use to authenticate against the IoT3 services"
    },
    "services": {
      "type": "object",
      "required": [
        "message"
      ],
      "properties": {
        "message": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/message/mqtt"
          }
        },
        "telemetry": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/telemetry/otlp-http"
          }
        }
      }
    }
  },
  "$defs": {
    "service": {
      "type": "object",
      "description": "Generic service definition",
      "required": [
        "payload",
        "uri"
      ],
      "properties": {
        "payload": {
          "type": "string",
          "description": "The type of payload the service accepts at that URI"
        },
        "uri": {
          "type": "string",
          "description": "The URI the service is reachable at"
        }
      }
    },
    "uri": {
      "http": {
        "format": "uri",
        "pattern": "^https?://"
      },
      "mqtt": {
        "format": "uri",
        "pattern": "^mqtt(\\+ws)?s?://[^/]+(/.+)?$"
      }
    },
    "message": {
      "type": "object",
      "properties": {
        "mqtt": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/$def/service"
            },
            {
              "type": "object",
              "required": [
                "topic_root"
              ],
              "properties": {
                "payload": {
                  "enum": [
                    "json",
                    "binary"
                  ]
                },
                "uri": {
                  "$ref": "#/$defs/uri/mqtt"
                },
                "topic_root": {
                  "type": "string",
                  "description": "The prefix to add in front of all topics before posting or subscribing"
                }
              }
            }
          ]
        }
      }
    },
    "telemetry": {
      "type": "object",
      "properties": {
        "otlp-http": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/$defs/service"
            },
            {
              "type": "object",
              "properties": {
                "payload": {
                  "enum": [
                    "otlp/json",
                    "otlp/grpc"
                  ]
                },
                "uri": {
                  "$ref": "#/$defs/uri/http"
                }
              }
            }
          ]
        }
      }
    }
  }
}
